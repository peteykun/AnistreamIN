<div class = "action bar">
    <div class = "search-bar">
        <div class="search-container">
            <span class="material-icons">search</span>
            <input type="text" name="search" onkeyup="timer = setTimeout(searchText,1000)" onkeydown = "clearTimeout(timer)" placeholder="Search for Anime title, Genre or Streaming service...">
        </div>
        <div class = "sort-dropdown">
            <div class="labels sort-menu">
                <span class="material-icons">sort</span>
                <span class="value">Score (High - Low)</span>
            </div>
            <div class="dropdown">
                <button onclick="clickAlphAZ()">Title (A - Z)</button>
                <button onclick="clickAlphZA()">Title (Z - A)</button>
                <button onclick="clickScoreHL()">Score (High - Low)</button>
                <button onclick="clickScoreLH()">Score (Low - High)</button>
                <button onclick="clickDateNO()">Updated (New - Old)</button>
                <button onclick="clickDateON()">Updated (Old - New)</button>
            </div>
        </div>
        <div class = "sort-dropdown">
            <div class="labels filter-platform">
                <span class="material-icons">filter_list</span>
                <span class="value">Platform</span>
            </div>
            <div class="dropdown">
                <label class="checkbox-container">Select All<input type="checkbox" id="Select All" onclick="updateSelect()" checked><span class="checkmark"></span></label>
                <label class="checkbox-container">Ani-One<input type="checkbox" id="Ani-One" onclick="filterData()"><span class="checkmark"></span></label>
                <label class="checkbox-container">CONtv<input type="checkbox" id="CONtv" onclick="filterData()"><span class="checkmark"></span></label>
                <label class="checkbox-container">Crunchyroll<input type="checkbox" id="Crunchyroll" onclick="filterData()"><span class="checkmark"></span></label>
                <label class="checkbox-container">GundamInfo<input type="checkbox" id="GundamInfo" onclick="filterData()"><span class="checkmark"></span></label>
                <label class="checkbox-container">Muse Asia<input type="checkbox" id="Muse Asia" onclick="filterData()"><span class="checkmark"></span></label>
                <label class="checkbox-container">Netflix<input type="checkbox" id="Netflix" onclick="filterData()"><span class="checkmark"></span></label>
                <label class="checkbox-container">Prime Video<input type="checkbox" id="Prime Video" onclick="filterData()"><span class="checkmark"></span></label>
                <label class="checkbox-container">Youtube<input type="checkbox" id="Youtube" onclick="filterData()"><span class="checkmark"></span></label>
                <label class="checkbox-container">tubiTV<input type="checkbox" id="tubiTV" onclick="filterData()"><span class="checkmark"></span></label>
            </div>
        </div>
    </div>
    <div class = "action-bottom">
        <div class="results"></div>
        <button class = "labels" onclick="clickFree()">View Free</button>
    </div>
</div>
<div class = "anime-container">
</div>

<%= javascript_pack_tag 'anime_list' %>